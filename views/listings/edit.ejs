<% layout('layouts/boilerplate') -%>
<body>
    <form action="/listings/<%= listing._id %>?_method=PATCH" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="row mt-4">
        <div class="col-md-8 col-10 offset-md-2 offset-1">
            <h2>Edit Listing</h2>
            <div class="mb-3">
                <label for="title" class="form-label">Title : </label>
                <input type="text" name="listing[title]" class="form-control" id="title" value="<%= listing.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter a Title.
                  </div>            
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description : </label>
                <textarea name="listing[description]" id="description" class="form-control" cols="30" rows="2" required><%= listing.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter a Title.
                  </div>
            </div>
            <div class="mb-3">
              <label for="listingCategory">Choose Category</label>
              <select class="form-select" id="listingCategory" aria-label="Default select example" name="listing[category]" required>
                  <option disabled>Please Choose Category</option>
                  <option value="Pools">Pools</option>
                  <option value="Hotels">Hotels</option>
                  <option value="Mountains">Mountains</option>
                  <option value="Houseboats">Houseboats</option>
                  <option value="Beach">Beach</option>
                  <option value="Golf">Golf</option>
                  <option value="Domes">Domes</option>
                  <option value="Restaurant">Restaurant</option>
                  <option value="Playstation">Playstation</option>
                  <option value="Skiing">Skiing</option>
                </select>
             </div>
            <div class="mb-3">
              <p>Original Listing Image</p>
              <img class="edit-listing-image" src="<%= imageUrl %>" alt="listing image">
            </div>
            <div class="mb-3">
                  <label for="image" class="form-label">Upload New Image : </label>
                  <input type="file" name="listing[image]" id="image" class="form-control">
            </div>
            <div class="mb-3 row">
                <div class="col-md-4">
                    <label for="price" class="form-label">Price : (&#8377;)</label>
                    <input type="text" name="listing[price]" id="price" class="form-control" value="<%= listing.price %>" required>
                    <div class="invalid-feedback">
                      Please enter price
                </div>
            </div>
                <div class="col-md-8">
                    <label for="country" class="form-label">Country : </label>
                    <input type="text" name="listing[country]" class="form-control" id="country" value="<%= listing.country %>" required>
                    <div class="invalid-feedback">
                        Please enter a valid country name
                      </div>
                </div>    
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location : </label>
                <input type="text" name="listing[location]" class="form-control" id="location" value="<%= listing.location %>" required>
                <div class="invalid-feedback">
                    Please enter a location
                  </div> 
            </div>
            <button class="mt-3 mb-3 btn btn-dark btn-edit">Edit</button>
        </div>
        </div>       
    </form>
 