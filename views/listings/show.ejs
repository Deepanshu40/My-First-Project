<% layout('layouts/boilerplate') -%>
<body>
    <div class="nav-second">
        <div class="navbar-listing-category">
            <div class="listing-category-item listing-category-item-hide">
                <a href="/listings/category/Pools">
                <i class="fa-solid fa-person-swimming"></i>
                <span>Pools</span></a>
            </div>
            <div class="listing-category-item  listing-category-item-hide" >
                <a href="/listings/category/Hotels">
                <i class="fa-solid fa-hotel"></i>
                <span>Hotels</span></a>
            </div>
            <div class="listing-category-item listing-category-item-hide">
                <a href="/listings/category/Mountains">
                <i class="fa-solid fa-mountain"></i>
                <span>Mountains</span></a>
            </div>
            <div class="listing-category-item">
                <a href="/listings/category/HouseBoats">
                <i class="fa-solid fa-mountain"></i>
                <span>HouseBoats</span></a>
            </div>
            <div class="listing-category-item">
                <a href="/listings/category/Beach">
                <i class="fa-solid fa-umbrella-beach"></i>
                <span>Beach</span></a>
            </div>
            <div class="listing-category-item">
                <a href="/listings/category/Golf">
                <i class="fa-solid fa-golf-ball-tee"></i>
                <span>Golf</span></a>
            </div>
            <div class="listing-category-item">
                <a href="/listings/category/Domes">
                <i class="fa-solid fa-landmark-dome"></i>
                <span>Domes</span></a>
            </div>
            <div class="listing-category-item">
                <a href="/listings/category/Restaurant">
                <i class="fa-solid fa-utensils"></i>
                <span>Restaurant</span></a>
            </div>
            <div class="listing-category-item">
            <a href="/listings/category/Playstation">
            <i class="fa-solid fa-gamepad"></i>
            <span>Play Station</span></a>
            </div>
            <div class="listing-category-item">
            <a href="/listings/category/Skiing">
            <i class="fa-solid fa-person-skiing-nordic"></i>
            <span>Skiing</span></a>
            </div>
        </div>
        <div class="form-check form-switch form-check-reverse tax-toggle-section">
            <input class="form-check-input tax-toggle-section-switch" type="checkbox" value="" id="reverseCheck1">
            <label class="form-check-label" for="reverseCheck1">
              Display total after taxes
            </label>
        </div>
    </div>
    <div class="mt-3 row offset-1 col-10">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for (listing of listings) {%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing image">
                        <div class="card-img-overlay">Wanderlust</div>
                        <div class="card-body">
                        <b><p class="card-text mt-2"><%= listing.title %></b><br>
                        &#8377; <%= listing.price.toLocaleString("EN-IN") %> per night <i class="card-text-show-all-listings"> + 18 % GST </i></p>
                        </div>
                    </div>
                </a>
            <%}%>   
        </div>    
    </div>
</body>
