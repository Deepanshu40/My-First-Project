<% layout('layouts/boilerplate') -%>
<body>
    <div class="width60 md-width60 sm-width80 usm-width80 marginautolr mt-3">
        <h1>Signup</h1>
        <form action="/signup" method="POST" class="flex flex-col">
            <label for="username" class="form-label">Username : </label>
            <input type="text" id="username" class="form-input" placeholder="username", name="username" required>    
            <label for="email" class="form-label">Email : </label>
            <input type="email" id="email" class="form-input" placeholder="xyz@gmail.com", name="email" required>    
            <label for="password" class="form-label">Password : </label>
            <input type="password" id="password" class="form-input" placeholder="password", name="password" required>
            <span><button type="submit" class="btn btn-red col-w">Signup</button></span>    
        </form>
    </div>
</body>